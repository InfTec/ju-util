	<modelVersion>4.0.0</modelVersion>

	<groupId>ch.inftec.ju.test</groupId>
	<artifactId>project-to-test</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>jar</packaging>
	<name>Test Mojo</name>

